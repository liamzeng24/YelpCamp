<%- include("partials/header") %>
<div class="container">
    <h1 style="text-align: center;">Creat a New Comment</h1>
    <div style="width:50%; margin: 25px auto;">
        <form action="/campgrounds/<%=comment_detail.name%>/comment" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Author" name="Author">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Comment here" name="Comment">
            </div>
            <div class="form-group">
                <button type="button submit" class="btn btn-md btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include("partials/footer") %>